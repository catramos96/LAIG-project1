<?xml version="1.0" encoding="UTF-16" standalone="yes"?>

<dsx>
	<scene root="sceneRoot" axis_length="3" /> 

    <views default="perspective1" >
    		
        <perspective id="perspective1" near="0.1" far="500" angle="25">

            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
            
        </perspective>

        <perspective id="perspective2" near="0.1" far="500" angle="25">

            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
            
        </perspective>

        <perspective id="perspective3" near="0.1" far="500" angle="25">

            <from x="5" y="5" z="15" />
            <to x="0" y="0" z="0" />
            
        </perspective>


    </views>  

    <illumination doublesided="0" local="1" >
    
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0" g="0" b="0" a="1" />					
        
    </illumination>

    <lights>
		
        <omni id="lightOmni1" enabled="0" > 
            <location x="30" y="30" z="30" w="1" />						
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>

        <omni id="lightOmni2" enabled="1" >
            <location x="0" y="1" z="0" w="1" />						
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
        </omni>
        
        
        <spot id="lightSpot1" enabled="1" angle="60" exponent="3">
			
            <target x="0" y="0" z="0" />
            <location x="4" y="4" z="8" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="0.2" g="0.2" b="0.3" a="1" />
        </spot>
    </lights>

    <textures>
   
        <texture id="skyTexture" file="../resources/sky.png" length_s="0.4" length_t="0.4" />
        <texture id="neptuneTexture" file="../resources/neptune.jpg" length_s="1" length_t="1" />
        <texture id="earthTexture" file="../resources/earth.jpg" length_s="1" length_t="1" />
        <texture id="saturnTexture" file="../resources/saturn.png" length_s="1" length_t="1" />
        <texture id="saturnRingsTexture" file="../resources/saturn_rings.png" length_s="1" length_t="1" />
        <texture id="sunTexture" file="../resources/sun.jpg" length_s="1" length_t="1" />
        <texture id="uranusTexture" file="../resources/uranus.jpg" length_s="1" length_t="1" />
        <texture id="jupiterTexture" file="../resources/jupiter.jpg" length_s="1" length_t="1" />
        <texture id="marsTexture" file="../resources/mars.png" length_s="1" length_t="1" />
        <texture id="venusTexture" file="../resources/venus.jpg" length_s="1" length_t="1" />
        <texture id="mercuryTexture" file="../resources/mercury.png" length_s="1" length_t="1" />
        <texture id="spaceshipTexture" file="../resources/spaceship.png" length_s="1" length_t="1" />
        
    </textures>

    <materials>
    
        <material id="shiny" >
            <emission r="1" g="1" b="1" a="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="200" />
        </material>

        <material id="matt" >
            <emission r="0.01" g="0.01" b="0.01" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="1" g="0.6" b="0" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="20" />
        </material>

        <material id="light" >
            <emission r="1" g="1" b="1" a="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="100" />
        </material>
        
    </materials>

    <transformations>																		
    
        <transformation id="solarSystemPosition">
        	<translate x="5" y="5" z="5" />
			<translate x="1" y="0" z="1" />
			<scale x="0.6" y = "0.6" z="0.6" />
        </transformation>

    </transformations>

    <primitives>
		
        <primitive id="primitive1">
            <rectangle x1="0" y1="0" x2="1" y2="1" />				
        </primitive>

        <primitive id="primitive2">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="primitive3">
            <cylinder base="0" top="2" height="3" slices="3" stacks="10" />
        </primitive>

        <primitive id="primitive4">
            <sphere radius="1" slices="30" stacks="30" />
        </primitive>

        <primitive id="primitive5">
            <torus inner="0.7" outer="1" slices="50" loops="50" />
        </primitive>
        
    </primitives>

    <components>

    	<component id="sceneRoot">																
        
            <transformation>			
            </transformation>
            
			<materials>
                <material id="shiny" />
            </materials>
            
			<texture id="none" />
                     
			<children>
				<componentref id="Space" />
				<componentref id="Spaceship" />
				<componentref id="Planets" />
				<componentref id="Stars" />
            </children>
            
        </component>
			
		 <component id="Space">																
        
            <transformation>
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="skyTexture" />

			<children>
            	<componentref id = "LeftWall" />
            	<componentref id = "RightWall" />
            	<componentref id = "BottomFloor" />
            </children>
            
          </component>

           <component id="LeftWall">																
        
            <transformation>
            	<scale x="12" y="12" z="12" />
            	<translate x="0" y ="0" z ="1"/>
            	<rotate axis="y" angle="90"/>
            	
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="inherit" />

			<children>
            	<primitiveref id="primitive1"/>
            </children>
            
        </component>

        <component id="RightWall">																
        
            <transformation>
            	<scale x="12" y="12" z="12" />
            	
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="inherit" />

			<children>
            	<primitiveref id="primitive1"/>
            </children>
            
        </component>

           <component id="BottomFloor">																
        
            <transformation>
            	<scale x="12" y="12" z="12" />
            	<translate x="0" y ="0" z ="1"/>
            	<rotate axis="x" angle="-90"/>
            	
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="inherit" />

			<children>
            	<primitiveref id="primitive1"/>
            </children>
            
        </component>

        <component id="Spaceship">																
        
            <transformation>
            	<translate x="5" y="6" z ="10"/>
            	<scale x="1" y="0.2" z="1"/>
            	<rotate axis="z" angle="45"/>          	
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="spaceshipTexture" />

			<children>
            	<primitiveref id="primitive3"/>
            </children>
            
        </component>

         
          <component id="Planets">																
        
            <transformation>
            	<transformationref id="solarSystemPosition"/>
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="none" />

			<children>
				<componentref id = "Mercury" />
				<componentref id = "Venus" />
				<componentref id = "Earth" />
				<componentref id = "Mars" />
				<componentref id = "Jupiter" />
				<componentref id = "Saturn" />
				<componentref id = "Uranus" />
            	<componentref id = "Neptune" />
            	
            	
            </children>
            
        </component>
		
		<component id="Mercury">																
        
            <transformation>
            	<translate x="0" y="0" z="2.5" />
            	<rotate axis= "x" angle="-120"/>
				<scale x="0.2" y = "0.2" z="0.2" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="mercuryTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component> 

		<component id="Venus">																
        
            <transformation>
            	<translate x="2" y="0" z="2" />
            	<rotate axis= "x" angle="-120"/>
				<scale x="0.3" y = "0.3" z="0.3" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="venusTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component> 

        <component id="Earth">																
        
            <transformation>
           		<translate x="4" y="0" z="0" />
           		<rotate axis= "x" angle="-120"/>
            	<scale x="0.45" y = "0.45" z="0.45" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="earthTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component> 

        <component id="Mars">																
        
            <transformation>
            	<translate x="5" y="0" z="-3" />
            	<rotate axis= "x" angle="-120"/>
				<scale x="0.4" y = "0.4" z="0.4" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="marsTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component>

         <component id="Jupiter">																
        
            <transformation>
            	<translate x="4" y="0" z="-6" />
            	<rotate axis= "x" angle="-120"/>
            	<scale x="1.2" y = "1.2" z="1.2" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="jupiterTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component>

        <component id="Saturn">																
        
            <transformation>
            	<translate x="0" y="0" z="-8" />
				<rotate axis= "x" angle="-120"/>
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="none" />

			<children>
            	
               <componentref id = "SaturnPlanet" />
               <componentref id = "SaturnRing" />
                          
            </children>
            
        </component>

        <component id="SaturnPlanet">																
        
            <transformation>
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="saturnTexture" />

			<children>
            
                <primitiveref id = "primitive4" />
                
            </children>
            
        </component>

        <component id="SaturnRing">																
        
            <transformation>
            	<scale x="2" y="2" z="0.2" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="saturnTexture" />

			<children>
            
               <primitiveref id = "primitive5" />
                
            </children>
            
        </component>

		<component id="Uranus">																
        
            <transformation>
            	<translate x="-4" y="0" z="-8" />
            	<rotate axis= "x" angle="-120"/>
				<scale x="0.5" y = "0.5" z="0.5" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="uranusTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component> 

        <component id="Neptune">																
        
            <transformation>
            	<translate x="-7" y="0" z="-6" />
            	<rotate axis= "x" angle="-120"/>
				<scale x="0.5" y = "0.5" z="0.5" />
            </transformation>
       
			<materials>
				<material id="shiny" />
            </materials>
                         
			<texture id="neptuneTexture" />

			<children>
            
                <primitiveref id="primitive4" />
                
            </children>
            
        </component> 

        <component id="Stars">																
        
           <transformation>
           		<translate x="5" y="5" z="5"/>
           		<rotate axis= "x" angle="-90"/>
            	<scale x="1.6" y="1.6" z="1.6"/>
            </transformation>
       
			<materials>
				<material id="light" />
				<material id="matt" />
				<material id="shiny" />
            </materials>
                         
			<texture id="sunTexture" />

			<children>
            	<primitiveref id = "primitive4" />
            </children>
            
        </component>
                
    </components>

</dsx>