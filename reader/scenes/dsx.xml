<dsx>

    <!-- objeto para raiz do grafo e comprimento dos tres eixos (cilindros) -->

    <scene root="sceneRoot" axis_length="3" />

    <!-- varias vistas, com uma perspetiva default. -->
    <!-- v/V para mudar para a proxima da lista (da ultima volta para a primeira) -->

    <views default="perspective1" >
    		
        <perspective id="perspective1" near="0.1" far="500" angle="0.4">

            <from x="15" y="5" z="15" />
            <to x="0" y="0" z="0" />
            
        </perspective>
        
    </views>

    <illumination doublesided="1" local="1" >
    
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0" g="0" b="0" a="1" />					
        
    </illumination>

    <lights>
    
        <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
		
        <omni id="lightOmni1" enabled="1" >
            <location x="15" y="15" z="15" w="60" />							<!-- w - ????????? -->
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0.4" g="0.3" b="0.3" a="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
        </omni>

        <omni id="lightOmni2" enabled="1" >
            <location x="-12" y="15" z="20" w="30" />							<!-- w - ????????? -->
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0.3" g="0.4" b="0.3" a="1" />
            <specular r="0.2" g="0.2" b="0.2" a="1" />
        </omni>
        
        
        <spot id="lightSpot1" enabled="1" angle="10" exponent="256">  		<!-- ang = 0.785 = pi/4 -->
		
            <!-- atencao, "target" e' diferente de "direction" -->
			
            <target x="0" y="0" z="0" />
            <location x="4" y="4" z="8" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="0.2" g="0.2" b="0.3" a="1" />
        </spot>
    </lights>

    <textures>
    
        <!-- Deve existir um ou mais blocos "texture" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <!-- length_s e length_t sao fatores de escala de textura.-->
        <texture id="texture1" file="scenes/flor.jpg" length_s="1" length_t="1" />  
        <texture id="texture2" file="scenes/flor.jpg" length_s="1" length_t="1" /> 
        
    </textures>

    <materials>
    
        <!-- Os identificadores "id" nao podem ser repetidos, e deve existir pelo menos 1 material -->
        <material id="shiny" >
            <emission r="0.01" g="0.01" b="0.01" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="1" g="0.6" b="0" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="1000" />
        </material>
        <material id="matt" >
            <emission r="0.01" g="0.01" b="0.01" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="1" g="0.6" b="0" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="1000" />
        </material>
        
    </materials>

    <transformations>																		<!-- FALTA AS TRANSFORMAÇÕES -->
    
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <transformation id="teste1">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="0.1" y="2" z="3" />
           <rotate axis="x" angle="0.5" />
           <scale x="4" y="9" z="-1" />
        </transformation>

         <transformation id="teste2">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="0" y="1" z="4" />
           <rotate axis="y" angle="2" />
           <scale x="-2" y="1" z="7" />
        </transformation>
        
    </transformations>

    <primitives>
    
        <!-- Deve existir um ou mais blocos "primitive" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
		
        <primitive id="primitive1">
           
            <!-- apenas pode existir UMA das seguintes tags: -->
            <!--     rectangle, triangle, cylinder, sphere, torus -->
            <!-- os parametros devem ser interpretados, genericamente como-->
            <!-- em OpenGL/GLUT; o cilindro deve adicionalmente ter tampas -->
			
            <rectangle x1="0" y1="0" x2="1" y2="1" />					<!-- ????????? -->
        </primitive>

        <primitive id="primitive2">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="primitive3">
            <cylinder base="1" top="1" height="1" slices="15" stacks="15" />
        </primitive>

        <primitive id="primitive4">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>

        <primitive id="primitive5">
            <torus inner="3" outer="2" slices="12" loops="8" />
        </primitive>
        
    </primitives>

    <components>

    	<component id="sceneRoot">																
        
            <!-- bloco "transformation" obrigatorio -->
            <transformation>			
                <translate x="0" y="0" z="0" />
            </transformation>
       
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do --> 
            <!-- ultimo material da lista volta ao primeiro -->
            
			<materials>
                <material id="shiny" />
            </materials>
                         
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            
			<texture id="none" />
            
            <!-- bloco "children" obrigatorio num "component" -->
            
			<children>
            
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas -->
			
                <componentref id="node1" />
                
            </children>
            
        </component>
        
        <component id="node1">																
        
            <!-- bloco "transformation" obrigatorio -->
            <transformation>
                <transformationref id="teste1" />
                
                <!-- ou, ALTERNATIVAMENTE, transformacoes explicitas, -->
                <!-- usando zero ou mais das instrucoes seguintes 
				
                <translate x="ff" y="ff" z="ff" />
                <rotate axis="cc" angle="ff" />
                <scale x="ff" y="ff" z="ff" />  -->
            </transformation>
       
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do --> 
            <!-- ultimo material da lista volta ao primeiro -->
            
			<materials>
                <material id="shiny" />
                <material id="matt" />
                <material id="shiny" />
            </materials>
                         
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            
			<texture id="texture1" />
            
            <!-- bloco "children" obrigatorio num "component" -->
            
			<children>
            
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas 
				
                <componentref id="ss" />  fazer novo component -->
                <componentref id="node2" />
                <componentref id="node3" />
                
            </children>
            
        </component>
        
        <component id="node2">																
        
            <!-- bloco "transformation" obrigatorio -->
            <transformation>
               <!-- <transformationref id="teste2" /> -->
                
                <!-- ou, ALTERNATIVAMENTE, transformacoes explicitas, -->
                <!-- usando zero ou mais das instrucoes seguintes -->
				
                <translate x="1.1" y="2.2" z="3.3" />
                <rotate axis="x" angle="45" />
                <scale x="5" y="2" z="0" /> 
            </transformation>
       
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do --> 
            <!-- ultimo material da lista volta ao primeiro -->
            
			<materials>
				<material id="inherit" />
                <material id="shiny" />
            </materials>
                         
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            
			<texture id="texture2" />
            
            <!-- bloco "children" obrigatorio num "component" -->
            
			<children>
            
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas -->
				
                
                <primitiveref id="primitive1" />
                
            </children>
            
        </component>

         <component id="node3">																
        
            <!-- bloco "transformation" obrigatorio -->
            <transformation>
               <!-- <transformationref id="teste2" /> -->
                
                <!-- ou, ALTERNATIVAMENTE, transformacoes explicitas, -->
                <!-- usando zero ou mais das instrucoes seguintes -->
				
                <translate x="1.1" y="2.2" z="3.3" />
                <rotate axis="x" angle="45" />
                <scale x="5" y="2" z="0" /> 
            </transformation>
       
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do --> 
            <!-- ultimo material da lista volta ao primeiro -->
            
			<materials>
				<material id="inherit" />
                <material id="shiny" />
            </materials>
                         
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            
			<texture id="none" />
            
            <!-- bloco "children" obrigatorio num "component" -->
            
			<children>
            
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas -->
				
                
                <primitiveref id="primitive4" />
                
            </children>
            
        </component>
        
    </components>

</dsx>