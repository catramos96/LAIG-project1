<dsx>

    <!-- objeto para raiz do grafo e comprimento dos tres eixos (cilindros) -->

    <scene root="scene" axis_length="3" />

    <!-- varias vistas, com uma perspetiva default. -->
    <!-- v/V para mudar para a proxima da lista (da ultima volta para a primeira) -->

    <views default="perspective1" >
    		
        <perspective id="perspective1" near="0.1" far="1000" angle="60">

            <from x="0" y="5" z="15" />
            <to x="0" y="0" z="0" />
            
        </perspective>
        
    </views>

    <illumination doublesided="1" local="1" >
    
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="0.5" />					
        
    </illumination>

    <lights>
    
        <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
		
        <omni id="lightOmni1" enabled="1" >
            <location x="3" y="3" z="3" w="ff" />							<!-- w - ????????? -->
            <ambient r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="0.8" />
            <specular r="0.5" g="0.5" b="0.5" a="0.5" />
        </omni>

        <omni id="lightOmni2" enabled="1" >
            <location x="0.2" y="3" z="6" w="ff" />							<!-- w - ????????? -->
            <ambient r="0.1" g="0.2" b="0.5" a="1" />
            <diffuse r="0.9" g="0.5" b="0.7" a="0.8" />
            <specular r="0.5" g="0.5" b="0.3" a="0.1" />
        </omni>
        
        
        <spot id="lightSpot1" enabled="1" angle="0.785" exponent="2">  		<!-- ang = 0.785 = pi/4 -->
		
            <!-- atencao, "target" e' diferente de "direction" -->
			
            <target x="0" y="1.5" z="1.5" />
            <location x="3" y="3" z="3" />
            <ambient r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="0.8" />
            <specular r="0.5" g="0.5" b="0.5" a="0.5" />
        </spot>

        <spot id="lightSpot2" enabled="1" angle="0.5" exponent="2">  		<!-- ang = 0.785 = pi/4 -->
		
            <!-- atencao, "target" e' diferente de "direction" -->
			
            <target x="1" y="1.5" z="1.5" />
            <location x="2" y="3" z="1" />
            <ambient r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.5" g="0.3" b="0.5" a="0.8" />
            <specular r="0.1" g="0.5" b="0.5" a="0.5" />
        </spot>
    </lights>

    <textures>
    
        <!-- Deve existir um ou mais blocos "texture" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <!-- length_s e length_t sao fatores de escala de textura.-->
        <texture id="texture1" file="scenes/flor.png" length_s="1" length_t="1" />  
        
    </textures>

    <materials>
    
        <!-- Os identificadores "id" nao podem ser repetidos, e deve existir pelo menos 1 material -->
        <material id="shiny" >
            <emission r="0.01" g="0.01" b="0.01" a="1" />
            <ambient r="0.3" g="0.3" b="0.3" a="1" />
            <diffuse r="1" g="0.6" b="0" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="1000" />
        </material>
        
    </materials>

    <transformations>																		<!-- FALTA AS TRANSFORMAÇÕES -->
    
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <transformation id="teste1">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="0.1" y="2" z="3" />
           <rotate axis="x" angle="0.5" />
           <scale x="4" y="9" z="-1" />
        </transformation>

         <transformation id="teste2">
           <!-- instrucoes a usar sem limite nem ordem -->
           <!-- deve existir pelo menos uma transformacao -->
           <translate x="0" y="1" z="4" />
           <rotate axis="y" angle="2" />
           <scale x="-2" y="1" z="7" />
        </transformation>
        
    </transformations>

</dsx>